@model AgencyViewModel

<script>
    AgencyCompany.init();
</script>

@if (ViewBag.Error != null)
{
    <div id="errorFromBack" class="alert alert-danger alert-dismissable" style="">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <ul>
            @foreach (var error in ViewBag.Error)
            {
                <li>
                    @error
                </li>
            }
        </ul>
    </div>
}

<div id="errorFromFront" class="alert alert-danger alert-dismissable" style="display: none">
</div>


<div class="row" id="pageGeneralDataCompany" style="width: 95%">

    <div class="col-sm-12">

        @using (Ajax.BeginForm("SaveAgencyCompany", "Companies", null, new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "framePpal"
        }, new { id = "formAgencyCompany" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <label class="col-sm-5 control-label">Persona de Contacto</label>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Name, new { @id = "textBoxName", @class = "form-control", style = "width:100%", placeholder = "Nombre de la Gestoría" })
                    </div>

                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.ContactPerson, new { @id = "textBoxContactPerson", @class = "form-control", style = "width:100%", placeholder = "Persona de Contacto" })
                    </div>

                </div>
            </div>

            <br />

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Teléfono</label>
                    <label class="col-sm-5 control-label">Email</label>
                </div>


                <div class="form-group">
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @id = "textBoxPhoneNumber", @class = "form-control", style = "width:100%", placeholder = "Teléfono" })
                    </div>

                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.Email, new { @id = "textBoxEmail", @class = "form-control", style = "width:100%", placeholder = "Email" })
                    </div>

                </div>
            </div>

            <br />

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-11 control-label">Observaciones</label>
                </div>


                <div class="form-group">
                    <div class="col-sm-11">
                        @Html.TextBoxFor(model => model.Observations, new { @id = "textBoxObservations", @class = "form-control", style = "width:100%", placeholder = "Observaciones" })
                    </div>
                </div>
            </div>


            <br />
            <br />
            <br />


            <div class="form-actions">
                
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CompanyId)
                
                <input type="submit" id="btnValidate" value="Guardar" class="btn btn-prevea btn" />

            </div>
        }

    </div>
</div>
