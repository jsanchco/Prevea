<script>
    Simulations.init();
</script>

<style>
    #circle {
        width: 20px;
        height: 20px;
        -webkit-border-radius: 25px;
        -moz-border-radius: 25px;
        border-radius: 25px;
        background: red;
    }
</style>

<div class="row" id="pageSimulations" style="margin: 8px">

    <div class="row"><H1>Herramienta Comercial</H1></div><br />

    <div class="row">
        <div class="col-sm-12">

            <!-- Breadcrumb 2 -->
            <ol class="breadcrumb bc-2">
                <li class="active">
                    <a id="br-simulations" onclick="Simulations.goToSimulations()" style="cursor: pointer;">
                        <i class="fa fa-magic"></i>
                        <strong>Simulaciones</strong>
                    </a>
                </li>
            </ol>

        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div id="errorFromBack" class="alert alert-danger alert-dismissable" style="">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <ul>
                @foreach (var error in ViewBag.Error)
                {
                    <li>
                        @error
                    </li>
                }
            </ul>
        </div>
    }

    <div id="confirm"></div>

    <div class="row">
        <div class="col-sm-12">
            <div id="gridSimulations"></div>
        </div>
    </div>

</div>

