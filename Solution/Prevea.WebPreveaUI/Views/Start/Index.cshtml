@{
    ViewBag.Title = "Prevea - Administración";
}

<script type="text/javascript">
    Start.init(@ViewBag.Notifications, @ViewBag.UserId, "@ViewBag.UserInitials", @ViewBag.UserRoleId, "@ViewBag.UserRoleName", "@ViewBag.UserRoleDescription");
</script>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-primary" data-collapsed="0" style="background: #f5f5f5;">
            <!-- panel head -->
            <div class="panel-heading" style="border-color: transparent; background: #f5f5f5">
                <div class="panel-options">
                    <a href="#" data-rel="close"><i class="icon-cancel"></i></a>
                </div>
            </div>
            <!-- panel body -->
            <div class="panel-body">
                <h1>
                    @DateTime.Now.ToString("d MMMM, yyyy")
                </h1>
                <h3>
                    Bienvenid@@ a PREVEA
                    <strong>
                        @{
                            var name = String.Format("{0} {1}",
                                Model.FirstName,
                                Model.LastName);
                        }
                        @name
                    </strong>
                </h3>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />

<div class="row">
    <div class="col-sm-12" id="pendingsNotifications">
        @{
            var numberNotifications = Convert.ToInt32(ViewBag.Notifications);
        }
        @if (numberNotifications > 0)
        {
            <a onclick="Start.goToNotifications()" style="cursor: pointer; font-size: 16px; margin-left: 20px; color: #373e4a">
                <span class="title">Tienes notificaciones pendientes de revisar!!!</span>
            </a>
        }

    </div>
</div>

<br />
<br />
<br />

