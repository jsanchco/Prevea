@model ChangePassword

<style>
    .k-window-titlebar {
        height: 30px;
    }

    .k-window-content .k-content {
        position: static;
    }

    .k-block > .k-header, .k-window-titlebar {
        position: static;
    }
</style>

<script>
    ChangePassword.init(@Model.UserId);
</script>


<div id="changePassword">
    
    <div class="col-sm-12">

        @using (Ajax.BeginForm("UpdatePasswordProfile", "Profile", null, new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "framePpal"
        }, new {id = "formChangePasswordProfile"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Contraseña anterior</label>
                </div>

                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.PasswordFor(model => model.OldPassword, new {@id = "textBoxOldPassword", @class = "form-control", style = "width:100%", placeholder = "Contraseña anterior"})
                    </div>
                </div>
            </div>

            <br/>

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Nueva contraseña</label>
                </div>

                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.PasswordFor(model => model.NewPassword, new {@id = "textBoxNewPassword", @class = "form-control", style = "width:100%", placeholder = "Nueva contraseña"})
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Repetir contraseña</label>
                </div>

                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.PasswordFor(model => model.RepeatPassword, new { @id = "textBoxRepeatPassword", @class = "form-control", style = "width:100%", placeholder = "Repetir contraseña" })
                    </div>
                </div>
            </div>

            <br/>
            <br/>
            <br/>

            <div class="form-actions" style="text-align: right;">

                @Html.HiddenFor(model => model.UserId)

                <input type="submit" id="btnValidate" value="Guardar" class="btn btn-prevea btn"/>

            </div>
        }

    </div>

</div>