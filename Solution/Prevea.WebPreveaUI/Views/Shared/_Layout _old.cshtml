<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Prevea Panel">
    <meta name="author" content="Jesús Sánchez">

    <link rel="icon" href="~/Images/favicon_FondoBlanco_32x32.png" sizes="32x32">

    <title>@ViewBag.Title</title>

    <link id="style-resource-1" href="~/Scripts/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css" rel="stylesheet">
    <link id="style-resource-2" href="~/Content/font-icons/entypo/font/entypo.css" rel="stylesheet">
    <link id="style-resource-3" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic" rel="stylesheet">
    <link id="style-resource-4" href="~/Content/bootstrap.css" rel="stylesheet">
    <link id="style-resource-5" href="~/Content/neon-core.css" rel="stylesheet">
    <link id="style-resource-6" href="~/Content/neon-theme.css" rel="stylesheet">
    <link id="style-resource-7" href="~/Content/neon-forms.css" rel="stylesheet">
    <link id="style-resource-8" href="~/Content/custom.css" rel="stylesheet">
    <link id="style-resource-9" href="~/Content/skins/prevea.css" rel="stylesheet">

    @if (ViewBag.HasForm != null &&
                             ViewBag.HasForm == true)
    {
        <link rel="stylesheet" href="~/Content/select2/select2-bootstrap.css" id="style-resource-1">
        <link rel="stylesheet" href="~/Content/select2/select2.css" id="style-resource-2">
        <link rel="stylesheet" href="~/Content/selectBoxIt/jquery.selectBoxIt.css" id="style-resource-3">
        <link rel="stylesheet" href="~/Content/daterangepicker/daterangepicker-bs3.css" id="style-resource-4">
        <link rel="stylesheet" href="~/Content/icheck/skins/minimal/_all.css" id="style-resource-5">
        <link rel="stylesheet" href="~/Content/icheck/skins/square/_all.css" id="style-resource-6">
        <link rel="stylesheet" href="~/Content/icheck/skins/flat/_all.css" id="style-resource-7">
        <link rel="stylesheet" href="~/Content/icheck/skins/futurico/futurico.css" id="style-resource-8">
        <link rel="stylesheet" href="~/Content/icheck/skins/polaris/polaris.css" id="style-resource-9">
    }

    @RenderSection("style", required: false)

    <script src="http://www.google-analytics.com/ga.js" type="text/javascript" async=""></script>
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>

    <script id="script-resource-1" src="~/Scripts/gsap/TweenMax.min.js"></script>
    <script id="script-resource-2" src="~/Scripts/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js"></script>
    <script id="script-resource-3" src="~/Scripts/bootstrap.js"></script>
    <script id="script-resource-4" src="~/Scripts/joinable.js"></script>
    <script id="script-resource-5" src="~/Scripts/resizeable.js"></script>
    <script id="script-resource-6" src="~/Scripts/neon-api.js"></script>
    <script id="script-resource-7" src="~/Scripts/cookies.min.js"></script>

    @if (ViewBag.HasForm != null &&
                             ViewBag.HasForm == true)
    {
        <script src="~/Scripts/select2/select2.min.js" id="script-resource-8"></script>
        <script src="~/Scripts/bootstrap-tagsinput.min.js" id="script-resource-9"></script>
        <script src="~/Scripts/typeahead.min.js" id="script-resource-10"></script>
        <script src="~/Scripts/selectboxit/jquery.selectBoxIt.min.js" id="script-resource-11"></script>
        <script src="~/Scripts/bootstrap-datepicker.js" id="script-resource-12"></script>
        <script src="~/Scripts/bootstrap-timepicker.min.js" id="script-resource-13"></script>
        <script src="~/Scripts/bootstrap-colorpicker.min.js" id="script-resource-14"></script>
        <script src="~/Scripts/moment.min.js" id="script-resource-15"></script>
        <script src="~/Scripts/daterangepicker/daterangepicker.js" id="script-resource-16"></script>
        <script src="~/Scripts/jquery.multi-select.js" id="script-resource-17"></script>
        <script src="~/Scripts/icheck/icheck.min.js" id="script-resource-18"></script>
        @*<script src="~/Scripts/neon-chat.js" id="script-resource-19"></script>*@
    }

    <!-- JavaScripts initializations and stuff -->
    <script id="script-resource-17" src="~/Scripts/neon-custom.js"></script>
    <!-- Demo Settings -->
    <script id="script-resource-18" src="~/Scripts/neon-demo.js"></script>
    <script id="script-resource-19" src="~/Scripts/neon-skins.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            var currentAction = '@ViewContext.RouteData.Values["action"].ToString()';
            var currentController = '@ViewContext.RouteData.Values["controller"].ToString()';
            //alert("Controller: " + currentController + ", Action: " + currentAction);
                        
            switch(currentController) {
                case "Company":
                    switch(currentAction) {
                        case 'Index':
                            $('#Company').attr('class', 'has-sub opened');
                            $('#Company-Index').attr('class', 'active');                         
                            
                            break;
                    }
                    break;
                default:
                    $('#' + currentController).attr('class', 'active');
                    break;
            }

        });

    </script>

    @RenderSection("script", required: false)

    @if (ViewBag.HasKendo != null &&
                         ViewBag.HasKendo == true)
    {
        <link href="@Url.Content("~/Content/kendo/2016.3.1118/kendo.common.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2016.3.1118/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2016.3.1118/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2016.3.1118/kendo.default.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/kendo/2016.3.1118/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/kendo/2016.3.1118/jquery.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo/2016.3.1118/jszip.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo/2016.3.1118/kendo.all.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo/2016.3.1118/kendo.aspnetmvc.min.js")"></script>
        <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
    }

</head>
<body class="page-body skin-red loaded page-fade">
    <div class="page-container">
        <!-- sidebar-menu -->
        <div class="sidebar-menu">
            <div class="sidebar-menu-inner">
                <header class="logo-env">
                    <!-- logo -->
                    <div class="logo">
                        <a href="#">
                            <img width="120" alt="" src="~/Images/Logo.png">
                        </a>
                    </div>
                    <!-- logo collapse icon -->
                    <div class="sidebar-collapse">
                        <a class="sidebar-collapse-icon" href="#">
                            <!-- add class "with-animation" if you want sidebar to have animation during expanding/collapsing transition -->
                            <i class="icon-menu"></i>
                        </a>
                    </div>
                    <!-- open/close menu icon (do not remove if you want to enable menu on mobile devices) -->
                    <div class="sidebar-mobile-menu visible-xs">
                        <a class="with-animation" href="#">
                            <!-- add class "with-animation" to support animation -->
                            <i class="icon-menu"></i>
                        </a>
                    </div>
                </header>
                <div class="sidebar-user-info">
                    <div class="sui-normal">
                        <a class="user-link" href="#">
                            @{
                                var pathPhoto = "image_not_found.png";
                                if (File.Exists(String.Format("{0}/user_{1}.png", Server.MapPath("~/Images"), ((UserProfile)ViewBag.User).Id)))
                                {
                                    pathPhoto = String.Format("user_{0}.png", ((UserProfile)ViewBag.User).Id);
                                }
                                var name = String.Format("{0} {1}",
                                                         ((UserProfile)ViewBag.User).FirstName,
                                                         ((UserProfile)ViewBag.User).LastName);
                            }
                            <img width="55" class="img-circle" alt="" src="~/Images/@pathPhoto">
                            @*<img width="55" class="img-circle" alt="" src="~/Images/image_not_found.png">*@
                            <span>Hola,</span>
                            <strong>@name</strong>
                        </a>
                    </div>
                    <div class="sui-hover inline-links animate-in">
                        <a href="#">
                            <i class="icon-attention"></i>
                            Avisos
                        </a>
                        <a href="#">
                            <i class="icon-doc-text"></i>
                            Ajustes
                        </a>
                        <a href="#">
                            <i class="icon-lock"></i>
                            Log Off
                        </a>
                        <span class="close-sui-popup">×</span>
                    </div>
                </div>
                <ul class="main-menu" id="main-menu">
                    <li class="root-level" id="Dashboard">
                        <a href="../Dashboard/Index">
                            <i class="icon-home"></i>
                            <span class="title">Dashboard</span>
                        </a>
                    </li>
                    <li class="root-level" id="Library">
                        <a href="~/Library/Index">
                            <i class="icon-book"></i>
                            <span class="title">Biblioteca</span>
                        </a>
                    </li>
                    <li class="has-sub" id="Company">
                        <a href="#">
                            <i class="glyphicon glyphicon-th-list"></i>
                            <span class="title">Empresas</span>
                        </a>
                        <ul>
                            <li id="Company-Index" class="active">
                                <a href="~/Company/Index">
                                    <i class="icon-folder"></i>
                                    <span class="title">Administración</span>
                                </a>
                            </li>
                            <li id="Company-Resumen" class="">
                                <a href="#">
                                    <span class="title">Resumen</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="has-sub" id="Trabajadores">
                        <a href="#">
                            <i class="icon-users"></i>
                            <span class="title">Trabajadores</span>
                        </a>
                        <ul>
                            <li id="Trabajadores|Administracion" class="">
                                <a href="#">
                                    <span class="title">Administración</span>
                                </a>
                            </li>
                            <li id="Trabajadores|Resumen" class="">
                                <a href="#">
                                    <span id="Trabajadores|Resumen" class="title">Resumen</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!-- sidebar-menu -->
        <div class="main-content">

            <div id="framePpal">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="main">

                &copy; 2017 <strong>AdminPrevea</strong> Designed by Jesús Sánchez

            </footer>

        </div>

    </div>
</body>

</html>