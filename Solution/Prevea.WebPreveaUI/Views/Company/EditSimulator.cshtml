@model Simulator

<script>
    EditSimulator.init(@Model.Id);
</script>

<div class="row" id="pageEditSimulator" style="margin: 8px">

    <div class="row">
        <H1>Herramienta Comercial</H1>
    </div><br />

    <div class="row">
        <div class="col-sm-12">
            <ol class="breadcrumb bc-2">
                <li class="active">
                    <a id="br-simulators" onclick="EditSimulator.goToSimulators()" style="cursor: pointer;">
                        <i class="fa fa-magic"></i>
                        Simulaciones
                    </a>
                </li>
                <li class="active">
                    <a id="br-simulator-editSimulator" onclick="EditSimulator.goToEditSimulator()" style="cursor: pointer;">
                        <strong>Editar Simulación</strong>
                    </a>
                </li>
            </ol>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div id="errorFromBack" class="alert alert-danger alert-dismissable" style="">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <ul>
                @foreach (var error in ViewBag.Error)
                {
                    <li>
                        @error
                    </li>
                }
            </ul>
        </div>
    }

    <div id="errorFromFront" class="alert alert-danger alert-dismissable" style="display: none">
    </div>

    <div class="row">
        <div class="col-sm-12">

            <blockquote class="blockquote-default">
                @using (Ajax.BeginForm("EditSimulator", "Company", null, new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "framePpal",
                    OnSuccess = "EditSimulator.onSuccessUpdate"
                }, new { id = "formEditSimulator" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="row form-group">                            
                        <label class="col-sm-4 control-label">Razón Social</label>
                        <label class="col-sm-4 control-label">CIF/NIF</label>
                        <label class="col-sm-4 control-label">Número de Empleados</label>
                    </div>
                 
                    <div class="row form-group">
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.Name, new {@id = "textBoxName", @class = "form-control", style = "width:100%", placeholder = "Razón Social"})
                        </div>

                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.NIF, new {@id = "textBoxNIF", @class = "form-control", style = "width:100%", placeholder = "CIF/NIF"})
                        </div>

                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.NumberEmployees, new
                            {
                                id = "textNumberEmployees",
                                type = "nummeric",
                                title = "Número de Trabajadores",
                                min = "1",
                                value = "1",
                                style = "width:100%; height: 31px",
                                placeholder = "Número de Trabajadores"
                            })

                        </div>
                    </div>

                    <div class="row form-group">
                        <label class="col-sm-11 control-label" style="color: black; text-align: center; font-size: 16px; font-weight: bold; margin-top: 30px; margin-bottom: 20px;">
                            IMPORTES POR UNIDAD TRABAJADOR
                        </label>     
                    </div>

                    <div class="row form-group">
                        <label class="col-sm-4 control-label">Técnicas</label>
                        <label class="col-sm-4 control-label">Vigilancia de la Salud</label>
                        <label class="col-sm-4 control-label">Reconocimientos Médicos</label>
                    </div>

                    <div class="row form-group">
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.AmountTecniques, new
                                {
                                    id = "textAmountTecniques",
                                    type = "nummeric",
                                    title = "Técnicas (precio por unidad trabajador)",
                                    min = "0",
                                    value = "0",
                                    style = "width:100%; height: 31px",
                                    placeholder = "Técnicas (precio por unidad trabajador)"
                                })
                            </div>

                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.AmountHealthVigilance, new
                                {
                                    id = "textAmountHealthVigilance",
                                    type = "nummeric",
                                    title = "Vigilancia de la Salud (precio por unidad trabajador)",
                                    min = "0",
                                    value = "0",
                                    style = "width:100%; height: 31px",
                                    placeholder = "Vigilancia de la Salud (precio por unidad trabajador)"
                                })
                            </div>

                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.AmountMedicalExamination, new
                                {
                                    id = "textAmountMedicalExamination",
                                    type = "nummeric",
                                    title = "Reconocimientos Médicos (precio por unidad trabajador)",
                                    min = "0",
                                    value = "0",
                                    style = "width:100%; height: 31px",
                                    placeholder = "Reconocimientos Médicos (precio por unidad trabajador)"
                                })
                            </div>
                        </div>
                        
                    <div class="row form-group">
                        <label id="lblAmountByEmployeeInTecniques" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center"> €</label>
                        <label id="lblAmountByEmployeeInHealthVigilance" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center"> €</label>
                        <label id="lblAmountByEmployeeInMedicalExamination" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center"> €</label>
                    </div>

                    <div class="row form-group">
                            <label id="lblPercentegeByEmployeeInTecniques" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">%</label>
                            <label id="lblPercentegeByEmployeeInHealthVigilance" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">%</label>
                            <label id="lblPercentegeByEmployeeInMedicalExamination" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">%</label>
                        </div>

                    <div class="row form-group">
                        <label class="col-sm-12 control-label" style="color: black; text-align: center; font-size: 16px; font-weight: bold; margin-top: 30px; margin-bottom: 20px;">TOTALES</label>
                    </div>

                    <div class="row form-group">
                        <label id="lblTotalByEmployeeInTecniques" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">€</label>
                        <label id="lblTotalByEmployeeInHealthVigilance" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">€</label>
                        <label id="lblTotalByEmployeeInMedicalExamination" class="col-sm-4 control-label" style="margin-top: 10px; text-align: center">€</label>
                    </div>

                    <div class="row form-group">
                            <label class="col-sm-1 control-label" style="color: #00639e; text-align: center; font-size: 20px; font-weight: bold; margin-top: 30px; margin-bottom: 20px;">TOTAL</label>
                            <label id="lblTotal" class="col-sm-1 control-label" style="color: #00639e; text-align: center; font-size: 20px; font-weight: bold; margin-top: 30px; margin-bottom: 20px;">€</label>
                        </div>

                    <br />

                    <div>
                        @Html.HiddenFor(x => x.Id)

                        <input type="submit" id="btnValidate" value="Guardar" class="btn btn-prevea btn"/>
                        <input type="button" id="btnSendNotification" value="Enviar Notificación a SEDE" class="btn btn-prevea btn" />
                        <input type="button" id="btnSendToCompanies" value="Enviar a Empresas" class="btn btn-prevea btn" />
                        <input type="button" id="btnCancel" value="Cancelar" class="btn"/>
                    </div>

                }

            </blockquote>

        </div>
    </div>

</div>

<br />


